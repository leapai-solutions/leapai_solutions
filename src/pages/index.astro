---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'LeapAI Solutions â€” AI Adoption Accelerator | Get AI Running in Production Fast',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:rocket',
      },
      { text: 'Our Services', href: '#services' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', alt: 'LeapAI Solutions - AI and Data Analytics' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">AI Adoption Accelerator</span> - Get AI Running in <span class="hidden xl:inline">Production</span>
      <span class="text-accent dark:text-white"> Fast</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Skip strategy consulting.</span> We accelerate practical AI adoption with delivery-focused packages that get AI working in production within weeks.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AI in Production, Fast.</span>
      From data platforms to production AI solutions, we deliver measurable ROI without lengthy consulting cycles.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Focus:" description="Accelerating practical AI adoption - no lengthy consulting, just production-ready AI solutions with measurable ROI" />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="AI Adoption Tiers"
    title="Get AI Running in Production - Fast"
    subtitle="Productized packages with clear timelines and deliverables. No lengthy consulting cycles - just build, integrate, and deploy."
    items={[
      {
        title: 'Foundation Tier (4-6 weeks)',
        description:
          'Build AI-ready data platform with modern architecture, data pipelines, and centralized storage. Get your foundation right from day one.',
        icon: 'tabler:database',
      },
      {
        title: 'Acceleration Tier (6-12 weeks)',
        description:
          'Deploy 1-2 production AI solutions with measurable ROI. Includes MLOps pipelines and business system integration.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Continuous Tier (Ongoing)',
        description:
          'Scale AI across your business with quarterly automation cycles, model monitoring, and proactive optimization.',
        icon: 'tabler:refresh',
      },
      {
        title: 'AI Integration Services',
        description:
          'Seamlessly integrate AI into existing systems (Salesforce, SAP, Microsoft 365) for immediate efficiency gains.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Production AI Development',
        description:
          'End-to-end AI/ML for forecasting, automation, computer vision, and generative AI. Built for production scale.',
        icon: 'tabler:brain',
      },
      {
        title: 'Managed AI Operations',
        description:
          'Monitor performance, prevent drift, automated retraining. Keep AI systems secure, performant, and up-to-date.',
        icon: 'tabler:settings-automation',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose Our AI Adoption Accelerator"
    title="Production-Ready AI Without the Wait"
    items={[
      {
        title: 'Fast Implementation',
        description:
          'AI solutions deployed in 4-12 weeks, not months. Our battle-tested frameworks and pre-built components accelerate delivery.',
      },
      {
        title: 'No Strategy Paralysis',
        description:
          'Skip lengthy consulting cycles. We focus on building and deploying AI solutions that deliver immediate business value.',
      },
      {
        title: 'Predictable Investment',
        description:
          'Clear pricing, timelines, and deliverables. Know exactly what you get and when - no open-ended consulting fees.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Analytics Dashboard',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">AI That Actually Works</h3>
      Production-ready AI solutions with measurable ROI, delivered on time and on budget
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="AI Implementation Insights"
    information={`Real-world case studies, implementation guides, and practical insights from successful AI deployments.
                        Learn how businesses like yours are getting AI running in production fast.
                `}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your AI Journey',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Get AI Running in Production?
    </Fragment>

    <Fragment slot="subtitle">
      Skip the strategy consulting. Start with our Foundation tier and see AI results in weeks, not months.
      <br class="hidden md:inline" />Get your AI adoption roadmap today.
    </Fragment>
  </CallToAction>
</Layout>