---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'LeapAI Solutions â€” AI Adoption Accelerator | Get AI Running in Production Fast',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:rocket',
      },
      { text: 'Our Services', href: '#services' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', alt: 'LeapAI Solutions - AI and Data Analytics' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Accelerate</span> Your <span class="text-accent dark:text-white">AI Adoption</span> With LeapAI Solutions
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Skip lengthy strategy consulting.</span> We accelerate practical AI adoption with delivery-focused packages that get AI working in production fast.</span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Focus:" description="Accelerating practical AI adoption - no lengthy consulting, just production-ready AI solutions with measurable ROI" />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Our Services"
    title="Data & AI Solutions That Drive Results"
    subtitle="Complete data and AI solutions: from building modern data platforms and integration pipelines to accelerating AI adoption across your business."
    items={[
      {
        title: 'Data Platform Services',
        description:
          'Design & implement modern cloud data platforms ready for AI and analytics. Includes lakehouse architecture, governance, security, and cost optimization.',
        icon: 'tabler:server-2',
        href: '/services/data/data-platform',
      },
      {
        title: 'Data Integration Services',
        description:
          'Design & implement ETL/ELT pipelines that turn raw, siloed data into usable business assets. Includes real-time ingestion, automation, and quality controls.',
        icon: 'tabler:git-branch',
        href: '/services/data/data-integration',
      },
      {
        title: 'AI Integration Services',
        description:
          'Embed AI models into business processes and systems for practical, production-ready automation. Transform existing workflows with efficiency and intelligent decision-making.',
        icon: 'tabler:plug-connected',
        href: '/services/ai/ai-integration',
      },
      {
        title: 'Generative AI & Agents Services',
        description:
          'Build intelligent copilots and autonomous AI assistants that reason, recommend, and act. Next-generation AI that transforms how staff interact with information.',
        icon: 'tabler:robot',
        href: '/services/ai/generative-ai-agents',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose Our AI Adoption Accelerator"
    title="Production-Ready AI Without the Wait"
    items={[
      {
        title: 'Fast Implementation',
        description:
          'AI solutions deployed in 4-12 weeks, not months. Our battle-tested frameworks and pre-built components accelerate delivery.',
      },
      {
        title: 'No Strategy Paralysis',
        description:
          'Skip lengthy consulting cycles. We focus on building and deploying AI solutions that deliver immediate business value.',
      },
      {
        title: 'Predictable Investment',
        description:
          'Clear pricing, timelines, and deliverables. Know exactly what you get and when - no open-ended consulting fees.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Analytics Dashboard',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">AI That Actually Works</h3>
      Production-ready AI solutions with measurable ROI, delivered on time and on budget
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="AI Implementation Insights"
    information={`Real-world case studies, implementation guides, and practical insights from successful AI deployments.
                        Learn how businesses like yours are getting AI running in production fast.
                `}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your AI Journey',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Get AI Running in Production?
    </Fragment>

    <Fragment slot="subtitle">
      Skip the strategy consulting. Start with our Foundation tier and see AI results in weeks, not months.
      <br class="hidden md:inline" />Get your AI adoption roadmap today.
    </Fragment>
  </CallToAction>
</Layout>