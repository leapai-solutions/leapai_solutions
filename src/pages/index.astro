---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'LeapAI Solutions â€” Professional Data & AI Solutions Provider',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/contact',
        icon: 'tabler:rocket',
      },
      { text: 'Our Services', href: '#services' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1677442136019-21780ecad995?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80', alt: 'LeapAI Solutions - AI and Data Analytics' }}
  >
    <Fragment slot="title">
      Transform Your Business with <span class="hidden xl:inline">Professional</span>
      <span class="text-accent dark:text-white"> Data & AI</span> Solutions
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">LeapAI Solutions</span> helps businesses unlock the power of their data through machine learning, analytics, and intelligent automation.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">LeapAI Solutions: Data-Driven Success.</span>
      From data strategy to AI implementation, we deliver solutions that drive measurable business outcomes and competitive advantage.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Mission:" description="Empowering businesses to harness the full potential of their data through innovative AI solutions" />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="Our Data & AI Solutions"
    subtitle="We provide comprehensive data and AI services that transform how businesses operate, make decisions, and drive growth."
    items={[
      {
        title: 'Data Strategy & Analytics',
        description:
          'Develop comprehensive data strategies and implement advanced analytics to unlock insights from your business data.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Machine Learning Solutions',
        description:
          'Custom ML models and algorithms designed to solve your specific business challenges and automate complex processes.',
        icon: 'tabler:brain',
      },
      {
        title: 'AI Implementation',
        description:
          'End-to-end AI implementation services, from proof of concept to production deployment and ongoing optimization.',
        icon: 'tabler:robot',
      },
      {
        title: 'Business Intelligence',
        description:
          'Transform raw data into actionable business insights with custom dashboards, reports, and visualization tools.',
        icon: 'tabler:dashboard',
      },
      {
        title: 'Data Engineering',
        description:
          'Build robust data pipelines, warehouses, and infrastructure to support your analytics and AI initiatives.',
        icon: 'tabler:database',
      },
      {
        title: 'AI Consulting',
        description:
          'Strategic guidance on AI adoption, technology selection, and digital transformation to maximize your AI ROI.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose LeapAI Solutions"
    title="Proven Expertise in Data & AI Transformation"
    items={[
      {
        title: 'Industry-Specific Solutions',
        description:
          'Tailored data and AI strategies designed for your specific industry challenges and business objectives.',
      },
      {
        title: 'End-to-End Implementation',
        description:
          'From strategy and development to deployment and ongoing support, we guide you through every step of your AI journey.',
      },
      {
        title: 'Measurable Business Impact',
        description:
          'Focus on delivering quantifiable results that directly impact your bottom line and competitive advantage.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Analytics Dashboard',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Built on Data Excellence</h3>
      Transform your business with cutting-edge AI solutions and data-driven insights
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Insights & Resources"
    information={`Stay ahead of the curve with our latest insights on data science, AI implementation, and digital transformation strategies.
                        Discover best practices, case studies, and expert guidance to accelerate your data journey.
                `}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your AI Journey',
        href: '/contact',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Transform Your Business?
    </Fragment>

    <Fragment slot="subtitle">
      Let's discuss your data challenges and develop a customized AI strategy that delivers real business value.
      <br class="hidden md:inline" />Get started with a free consultation today.
    </Fragment>
  </CallToAction>
</Layout>