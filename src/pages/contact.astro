---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact LeapAI Solutions - Get Started with Your Data & AI Journey',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Ready to Transform Your Business with Data & AI?" />

  <ContactUs
    id="form"
    title="Get Started with Professional Data & AI Solutions"
    subtitle="Ready to unlock the power of your data? Tell us about your challenges and goals, and we'll develop a customized solution strategy for your business."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Business Email',
      },
      {
        type: 'text',
        name: 'company',
        label: 'Company Name',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone Number',
      },
    ]}
    textarea={{
      label: 'Project Details - Tell us about your data challenges, AI goals, or specific requirements',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our privacy policy and consent to being contacted about our data and AI solutions.',
    }}
    description="Our solutions architects typically respond within 4-8 business hours with next steps."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How We Can Help Your Business"
    items={[
      {
        title: 'Strategy Consultation',
        description: `Schedule a free consultation to discuss your data strategy, AI readiness assessment, and custom solution roadmapping for your specific industry and business needs.`,
        icon: 'tabler:target',
      },
      {
        title: 'Technical Implementation',
        description:
          'Get expert guidance on machine learning development, data engineering, AI deployment, and integration with your existing business systems and workflows.',
        icon: 'tabler:code',
      },
      {
        title: 'Training & Support',
        description:
          'Access comprehensive training programs, ongoing technical support, and change management assistance to ensure successful adoption of data and AI solutions.',
        icon: 'tabler:school',
      },
      // {
      //   title: 'Phone',
      //   description: '+1 (555) 123-LEAP',
      //   icon: 'tabler:phone',
      // },
      // {
      //   title: 'Email',
      //   description: 'info@leapaisolutions.com',
      //   icon: 'tabler:mail',
      // },
      // {
      //   title: 'Business Hours',
      //   description: 'Monday - Friday: 9:00 AM - 6:00 PM EST',
      //   icon: 'tabler:clock',
      // },
    ]}
  />
</Layout>
