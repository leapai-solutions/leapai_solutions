---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Data & AI Services - LeapAI Solutions',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Data & AI Solutions That Transform Business"
    subtitle="Comprehensive services organized into two core areas: building robust data foundations and accelerating AI adoption. From data platforms to production AI systems."
    actions={[{ variant: 'primary', text: 'Get Started', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1518186285589-2f7649de83e0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2074&q=80',
      alt: 'LeapAI Solutions - Data & AI Services',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Data Services"
    subtitle="Build the robust data foundation your business needs for successful AI implementations and data-driven decision making."
    columns={2}
    items={[
      {
        title: 'Data Platform Implementation',
        description:
          'Build unified, scalable, and secure data platforms leveraging lakehouse architectures that support both real-time and batch processing. Incorporate agentic storage, metadata management, feature stores, and automated data pipelines.',
        icon: 'tabler:server-2',
        href: '/services/data#data-platform',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/data#data-platform',
        },
      },
      {
        title: 'Data Architecture & Engineering',
        description:
          'Engineer robust data architectures (cloud, hybrid, or on-premises) designed for optimal AI workload performance, governance, and data trust. Integration of all data sources for AI-ready environments.',
        icon: 'tabler:topology-star-3',
        href: '/services/data#data-architecture',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/data#data-architecture',
        },
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="AI Services"
    subtitle="Accelerate your AI adoption with practical solutions that deliver immediate business value and measurable outcomes."
    columns={2}
    items={[
      {
        title: 'AI Adoption Acceleration Services',
        description:
          'Rapid deployment and scaled integration of AI tools (generative AI, predictive analytics, automation systems) for everyday business processes. Move beyond experimentation into enterprise-wide AI solutions with measurable outcomes.',
        icon: 'tabler:rocket',
        href: '/services/ai#ai-adoption',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/ai#ai-adoption',
        },
      },
      {
        title: 'AI Integration Services',
        description:
          'Seamlessly integrate advanced AI tools into existing business systems (ERP, CRM, legacy infrastructure). Connect pre-built AI solutions to business workflows for immediate efficiency gains and ROI.',
        icon: 'tabler:plug-connected',
        href: '/services/ai#ai-integration',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/ai#ai-integration',
        },
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Fast Implementation',
        description:
          'Get AI solutions deployed in production within 4-12 weeks, not months. Our battle-tested frameworks and pre-built components accelerate delivery.',
        icon: 'tabler:bolt',
      },
      {
        title: 'Production-Ready Architecture',
        description:
          'Built for scale and reliability from day one. Cloud-native platforms, automated pipelines, and enterprise-grade security and governance.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Measurable ROI',
        description:
          'Every AI solution is designed to deliver clear business value with trackable metrics. No black box solutions - you see exactly how AI drives results.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Seamless Integration',
        description:
          'AI that works with your existing systems. No data silos or workflow disruption - just enhanced capabilities that fit naturally into your operations.',
        icon: 'tabler:puzzle',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1525909002-1b05e0c869d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=870&q=80',
      alt: 'AI Implementation Features',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Our AI Adoption Accelerator</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'No Strategy Paralysis',
        description:
          'Skip lengthy consulting cycles and strategy documents. Get straight to building and deploying AI solutions that deliver immediate business impact.',
        icon: 'tabler:clock',
      },
      {
        title: 'Future-Ready Foundation',
        description:
          'Data platforms built for continuous AI expansion. Your foundation scales with your ambitions - add new AI capabilities as your business grows.',
        icon: 'tabler:building-fortress',
      },
      {
        title: 'Predictable Investment',
        description:
          'Clear pricing, timelines, and deliverables. No open-ended consulting fees - know exactly what you get and when you get it.',
        icon: 'tabler:coin',
      },
      {
        title: 'Continuous Innovation',
        description:
          'Quarterly AI feature rollouts keep you ahead of competition. Your AI capabilities continuously evolve with your business needs.',
        icon: 'tabler:sparkles',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664688-cf412ec27db2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'AI Adoption Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Business Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="Real Results from AI Adoption Clients"
    testimonials={[
      {
        testimonial: `LeapAI delivered our demand forecasting AI in 8 weeks. It reduced inventory costs by 23% in the first quarter alone. No lengthy strategy phase - they just built it and it works.`,
        name: 'Sarah Chen',
        job: 'Operations Director, Manufacturing',
        image: {
          src: 'https://images.unsplash.com/photo-1618835962148-cf177563c6c0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'Sarah Chen Image',
        },
      },
      {
        testimonial: `Their Foundation tier gave us a proper data platform in 5 weeks. Now we can launch new AI projects without starting from scratch every time. The ROI is already clear.`,
        name: 'Marcus Rodriguez',
        job: 'CTO, FinTech Startup',
        image: {
          src: 'https://images.unsplash.com/photo-1561406636-b80293969660?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1pYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Marcus Rodriguez Image',
        },
      },
      {
        testimonial: `Finally found an AI partner that focuses on implementation, not endless planning. Their automated document processing saved us 15 hours per week immediately.`,
        name: 'Jennifer Walsh',
        job: 'VP Operations, Professional Services',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Jennifer Walsh Image',
        },
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'View more success stories...',
      href: '/case-studies',
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Your AI Journey',
        href: '/contact',
      },
    ]}
    title="Ready to Accelerate Your AI Adoption?"
    subtitle="Skip the strategy consulting and get AI working in production. Start with our Foundation tier and see results in weeks, not months."
  />
</Layout>
