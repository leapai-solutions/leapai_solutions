---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Data Services - Build Your AI-Ready Foundation | LeapAI Solutions',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  
  <Hero
    tagline="Data Services"
    title="Build the Foundation for AI Success"
    subtitle="Create unified, scalable, and secure data platforms that support both real-time and batch processing. Our data services ensure you have the robust infrastructure needed for successful AI implementations."
    actions={[{ variant: 'primary', text: 'Start Your Data Journey', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Platform Architecture',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Data Service Offerings"
    subtitle="Complete data solutions that transform your raw data into AI-ready business assets through modern platforms and integration pipelines"
    columns={2}
    items={[
      {
        title: 'Data Platform Services',
        description:
          'Design & implement modern cloud data platforms ready for AI and analytics. Includes lakehouse architecture, governance, security, and cost optimization.',
        icon: 'tabler:server-2',
        href: '/services/data/data-platform',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/data/data-platform',
        },
      },
      {
        title: 'Data Integration Services', 
        description:
          'Design & implement ETL/ELT pipelines that turn raw, siloed data into usable business assets. Includes real-time ingestion, automation, and quality controls.',
        icon: 'tabler:git-branch',
        href: '/services/data/data-integration',
        callToAction: {
          target: '_self',
          text: 'Learn More',
          href: '/services/data/data-integration',
        },
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Our Data Services"
    title="Built for AI Success from Day One"
    items={[
      {
        title: 'AI-Optimized Architecture',
        description:
          'Every data solution is designed specifically to support AI and machine learning workloads, ensuring optimal performance for your AI initiatives.',
        icon: 'tabler:brain',
      },
      {
        title: 'Future-Proof Foundation',
        description:
          'Built on modern cloud-native technologies that scale with your business and adapt to evolving AI requirements and new use cases.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Enterprise Security',
        description:
          'Comprehensive security and governance frameworks built from day one, ensuring compliance and data protection across all services.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Rapid Implementation',
        description:
          'Get your data infrastructure operational quickly with our proven methodologies and pre-built components, reducing time to value.',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1558494949-ef010cbdcc31?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Services Benefits',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Complete Data Solutions</h3>
      From platform implementation to architecture design and pipeline engineering, we provide end-to-end data solutions that work together seamlessly.
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Our Data Implementation Process"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Assessment & Strategy</span>',
        description:
          'Comprehensive audit of your current data landscape, identifying sources, quality issues, and integration requirements. Define architectural strategy and roadmap.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Architecture Design</span>',
        description:
          'Design optimal data architecture considering performance, scalability, security, and cost requirements. Select appropriate technologies and platforms.',
        icon: 'tabler:topology-star-3',
      },
      {
        title: 'Step 3: <span class="font-medium">Platform Build</span>',
        description:
          'Implement the data platform with automated pipelines, quality controls, and monitoring. Include testing and validation at every stage.',
        icon: 'tabler:tools',
      },
      {
        title: 'Step 4: <span class="font-medium">Integration & Testing</span>',
        description:
          'Connect all data sources, test end-to-end workflows, and validate data quality. Ensure the platform is ready for production AI workloads.',
        icon: 'tabler:plug-connected',
      },
      {
        title: 'Step 5: <span class="font-medium">Training & Handover</span>',
        description:
          'Train your team on platform operations, provide comprehensive documentation, and establish ongoing support and monitoring procedures.',
        icon: 'tabler:school',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Data Implementation Process',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technologies We Work With"
    subtitle="We leverage the best modern data technologies to build your platform"
    columns={3}
    items={[
      {
        title: 'Cloud Platforms',
        description: 'AWS, Microsoft Azure, Google Cloud Platform, Databricks, Snowflake',
        icon: 'tabler:cloud',
      },
      {
        title: 'Data Processing',
        description: 'Apache Spark, Kafka, Airflow, dbt, Delta Lake, Apache Iceberg',
        icon: 'tabler:cpu',
      },
      {
        title: 'Storage & Databases',
        description: 'S3, ADLS, BigQuery, PostgreSQL, MongoDB, Elasticsearch',
        icon: 'tabler:database',
      },
      {
        title: 'Data Quality',
        description: 'Great Expectations, Monte Carlo, DataDog, Custom monitoring solutions',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Orchestration',
        description: 'Apache Airflow, Prefect, Azure Data Factory, AWS Step Functions',
        icon: 'tabler:git-branch',
      },
      {
        title: 'Governance',
        description: 'Apache Atlas, Collibra, Alation, AWS Glue, Azure Purview',
        icon: 'tabler:shield-lock',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Discuss Your Data Needs',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
    ]}
    title="Ready to Build Your Data Foundation?"
    subtitle="Let's discuss how our data services can create the robust, scalable foundation your AI initiatives need to succeed."
  />
</Layout>